# ==========================================
# Site Configuration
# ==========================================

# Site URL (required for OG image generation and absolute URLs)
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# ==========================================
# Backend API Configuration
# ==========================================

# Django API Configuration (Main Backend)
NEXT_PUBLIC_API_URL=http://localhost:8000

# Router API Configuration (Legacy)
NEXT_PUBLIC_ROUTER_API_URL=http://localhost:8083
NEXT_PUBLIC_ROUTER_WS_URL=ws://localhost:8083
NEXT_PUBLIC_ROUTER_API_KEY=your-router-api-key-here

# Swarm API Configuration
NEXT_PUBLIC_SWARM_API_URL=http://localhost:8010

# ==========================================
# WebSocket Configuration
# ==========================================

# WebSocket RPC Configuration (django-ipc)
# This is the WebSocket RPC server for real-time updates
NEXT_PUBLIC_WS_RPC_URL=ws://localhost:8765/ws

# ==========================================
# Development Tools
# ==========================================

# Code-Server IDE Configuration (VS Code in browser)
NEXT_PUBLIC_CODE_SERVER_URL=http://localhost:3200

# Legacy alias for backward compatibility
NEXT_PUBLIC_THEIA_URL=http://localhost:3200

# 3D Workspace Visualization
NEXT_PUBLIC_3D_URL=http://localhost:3011

# ==========================================
# App Configuration
# ==========================================

NEXT_PUBLIC_APP_NAME=Unrealon Cloud
NEXT_PUBLIC_APP_VERSION=1.0.0

# ==========================================
# Feature Flags
# ==========================================

NEXT_PUBLIC_ENABLE_IDE_CHAT=false
NEXT_PUBLIC_ENABLE_SWARM=false

# ==========================================
# Development Notes
# ==========================================

# When running locally (pnpm dev on port 3000):
# - Uses localhost:8000 for Django API
# - Uses localhost:8083 for Router API
# - Uses localhost:8010 for Swarm API
# - Uses localhost:8765 for WebSocket RPC
#
# When running in Docker:
# - Docker containers use service names internally
# - Browser connects via localhost ports
# - Set NEXT_PUBLIC_SITE_URL to your production domain
