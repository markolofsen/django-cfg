.PHONY: deps build test fmt lint clean all

# Download dependencies
deps:
	go mod download
	go mod tidy

# Build (if there's a cmd/)
build:
	@if [ -d "cmd" ]; then \
		go build -o bin/ ./cmd/...; \
	else \
		echo "No cmd/ directory found, skipping build"; \
	fi

# Run tests
test:
	go test -v -race -cover ./...

# Format code
fmt:
	go fmt ./...
	goimports -w .

# Run linter
lint:
	golangci-lint run

# Clean build artifacts
clean:
	rm -rf bin/
	go clean

# Run all checks
all: fmt lint test