# Django CFG Environment Variables - Example
# Copy this file to .env and fill in your actual values
# Priority: ENV variables > .env file > defaults in code

# === Environment Mode ===
# Only set ONE of these to true (defaults to development if none set)
# IS_DEV=true
# IS_PROD=false
# IS_TEST=false

# === Core Django Settings ===
# SECRET_KEY="your-secret-key-minimum-50-characters-long-for-production"
# DEBUG=true

# === Database ===
# SQLite (default - good for dev): sqlite:///db/default.sqlite3
# PostgreSQL (recommended for dev/prod):
DATABASE__URL="postgresql://postgres:postgres@localhost:5432/djangocfg"

# === Cache (optional) ===
# REDIS_URL="redis://localhost:6379/0"

# === Email Configuration ===
# Development: use "console" to see emails in Django logs
# Production: use "smtp" for real email delivery
EMAIL__BACKEND="console"
EMAIL__HOST="mail.domain.com"
EMAIL__PORT=465
EMAIL__USERNAME="email@domain.com"
EMAIL__PASSWORD="your-email-password"
EMAIL__USE_TLS=false
EMAIL__USE_SSL=true
EMAIL__DEFAULT_FROM="YourApp <noreply@example.com>"

# === Telegram Configuration (optional) ===
TELEGRAM__BOT_TOKEN="your-telegram-bot-token"
TELEGRAM__CHAT_ID=0

# === API Keys (optional) ===
API_KEYS__OPENROUTER="your-openrouter-api-key"
API_KEYS__OPENAI="your-openai-api-key"

# === Payments API Keys (optional) ===
PAYMENTS_API_KEYS__NOWPAYMENTS_API_KEY="your-nowpayments-api-key"
PAYMENTS_API_KEYS__NOWPAYMENTS_IPN_SECRET="your-nowpayments-ipn-secret"
PAYMENTS_API_KEYS__NOWPAYMENTS_SANDBOX_MODE=true

# === Application URLs (optional - defaults provided) ===
# APP__DOMAIN="localhost"
# APP__API_URL="http://localhost:8000"
# APP__SITE_URL="http://localhost:3000"

# === Admin Configuration (optional) ===
# ADMIN_EMAILS="admin@example.com,admin2@example.com"

# === Security Domains (optional) ===
# SECURITY_DOMAINS="localhost,127.0.0.1,example.com"
