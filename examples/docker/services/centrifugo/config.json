{
  "client": {
    "allowed_origins": ["*"],
    "insecure": false,
    "token": {
      "hmac_secret_key": "${CENTRIFUGO_TOKEN_HMAC_SECRET}"
    }
  },
  "http_api": {
    "key": "${CENTRIFUGO_API_KEY}"
  },
  "admin": {
    "enabled": true,
    "password": "${CENTRIFUGO_ADMIN_PASSWORD}",
    "secret": "${CENTRIFUGO_ADMIN_SECRET}"
  },
  "channel": {
    "namespaces": [
      {
        "name": "rpc",
        "presence": false,
        "join_leave": false,
        "force_recovery": false,
        "history_size": 0,
        "history_ttl": "0s"
      },
      {
        "name": "user",
        "presence": true,
        "join_leave": true,
        "force_recovery": true,
        "history_size": 100,
        "history_ttl": "300s"
      },
      {
        "name": "notifications",
        "presence": false,
        "join_leave": false,
        "force_recovery": true,
        "history_size": 50,
        "history_ttl": "600s"
      }
    ]
  },
  "log": {
    "level": "${CENTRIFUGO_LOG_LEVEL}"
  },
  "health": {
    "enabled": true,
    "handler_prefix": "/health"
  }
}
