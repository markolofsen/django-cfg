{
  "extends": "@djangocfg/typescript-config/nextjs.json",
  "compilerOptions": {
    "paths": {
      "@/*": [
        "./app/_lib/*"
      ],
      "@core/*": [
        "./app/_core/*"
      ],
      "@routes/*": [
        "./app/_routes/*"
      ],
      "@layouts/*": [
        "./app/_layouts/*"
      ]
    },
    "noEmit": true
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "@*"
  ]
}
