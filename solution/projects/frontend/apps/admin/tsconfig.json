{
  "extends": "@djangocfg/typescript-config/nextjs.json",
  "compilerOptions": {
    "paths": {
      "@/*": [
        "./app/_lib/*"
      ],
      "@core/*": [
        "./app/_core/*"
      ],
      "@routes/*": [
        "./app/_routes/*"
      ],
      "@layouts/*": [
        "./app/_layouts/*"
      ],
      "@i18n": [
        "./i18n/index.ts"
      ],
      "@i18n/*": [
        "./i18n/*"
      ]
    },
    "noEmit": true
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "i18n/**/*.ts",
    "proxy.ts",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "@*"
  ]
}
